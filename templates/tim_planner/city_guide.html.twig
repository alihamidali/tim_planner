{% extends 'base.html.twig' %}

{% block nav %}
    <nav>
        <ul class="nav text-light">
            <li class="nav-item d-inline-flex">
                <a class="nav-link px-2 text-light" href="{{ path('index') }}">Home</a><span class="pt-2">|</span>
            </li>
            <li class="nav-item d-inline-flex">
                <a class="nav-link px-2 text-light" href="{{ path('about') }}">About Us</a><span class="pt-2">|</span>
            </li>
            <li class="nav-item d-inline-flex">
                <a class="nav-link px-2 text-light" href="{{ path('media') }}">Media</a><span class="pt-2">|</span>
            </li>
            <li class="nav-item d-inline-flex">
                <a class="nav-link px-2 text-light" href="{{ path('advertise') }}">Advertise</a><span class="pt-2">|</span>
            </li>
            <li class="nav-item d-inline-flex">
                <a class="nav-link px-2 text-light" href="{{ path('contact') }}">Contact Us</a>
            </li>
        </ul>
    </nav>
{% endblock %}

{% block section %}
    <section class="main">
        <div class="main-side-section p-4">
            <h1 class="page-title bg-blue">CITY GUIDE</h1>
            <p class="f-bold">PRICING AND TIMELINE</p>
            <p class="f-Semibold font-15 border-bottom pb-3">
                Once you have completed the Registration Form, TIM.DIGITAL is ready to create your bespoke travel itinerary when you travel next to your favourite destination.
                By a few simple clicks and information TIM.DIGITAL can develop your travel plan.
            </p>
        </div>
        <div class="main-section p-4" style="height: -webkit-fill-available;">
            <div class="row" style="overflow-y: scroll;height: inherit;">
                {% for city in cities %}
                    <div class="col-md-4 p-0">
                        <button class="btn btn-primary rounded-0 f-light w-50">View</button>
                        <img src="{{ asset('images/how_it_works/Layer 17@2x.png') }}" class="card-img-top w-90" alt="{{ city.image }}">
                        <div class="card-body p-3 bg-white w-90 mb-3 border border-2">
                            <h5 class="card-title f-Semibold font-15 mb-1">{{ city.name }}</h5>
                            <p class="card-text f-light pb-1" style="overflow: hidden;text-overflow: ellipsis;white-space: nowrap;">{{ city.description }}</p>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
        <img width="100%" src="{{ asset('images/background_2.png') }}" alt="background_2">
        <img class="bg-gradient" src="{{ asset('images/about/background_2.png') }}" alt="about_background_2">
    </section>
{% endblock %}